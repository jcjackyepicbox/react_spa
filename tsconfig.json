{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["dom", "esnext"],
    "strict": true,
    "strictFunctionTypes": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "es2017",
    "jsx": "react",
    "importHelpers": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src"]
}
